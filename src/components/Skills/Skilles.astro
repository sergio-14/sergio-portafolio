<style>
    .contenido {
    height: 80px;
    width: 200px;
    background-color: #000025;
    border-radius: 6%;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contenido::before {
    content: "";
    position: absolute;
    height: 400px;
    width: 300px;
    background-image: conic-gradient(
      rgba(208, 255, 0, 0.555) 20deg,
      transparent 120deg
    );
    animation: rotar 20s linear infinite;
  }

  @keyframes rotar {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(-360deg);
    }
  }

  .contenido::after {
    content: "";
    position: absolute;
    width: 197px;
    height: 77px;
    background-image: linear-gradient(rgb(7, 11, 58),rgb(3, 0, 17));
    border-radius: 6%;
  }
  @media (max-width: 768px) {
  .contenido {
    width: 150px;
    height: 55px;
  }
  .contenido::after {
    width: 147px;
    height: 52px;
  }
}

</style>

