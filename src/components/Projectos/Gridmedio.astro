<style>
  .tarjet {
    height: 52px;
    width: 520px;
    background-color: #010114;
    border-radius: 6%;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tarjet::before {
    content: "";
    position: absolute;
    height: 500px;
    width: 500px;
    background-image: conic-gradient(
      rgb(208, 255, 0) 10deg,
      transparent 120deg
    );
    animation: rotar 4s linear infinite;
  }

  @keyframes rotar {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(-360deg);
    }
  }
  .tarjet::after {
    content: "";
    position: absolute;
    height: 530px;
    width: 518px;
    background-color: #02061f;
    border-radius: 6%;
  }
  .thumbnail {
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .thumbnail:hover {
    transform: scale(1.1);
  }

  .main-image {
    width: 100%;
    transition: opacity 0.5s ease;
    opacity: 1;
  }

  .fade-out {
    opacity: 0;
  }

  .fade-in {
    opacity: 1;
  }

  .iconon {
    position: relative;
  }
  .icono2 {
    transition: filter 0.3s;
    filter: brightness(150%) saturate(180%) hue-rotate(45deg);
    filter: drop-shadow(0 0 15px rgb(10, 96, 158));
  }
  /* Efecto Hover Neon */
 
</style>
