---
import { Icon } from "astro-icon/components";
import Gridmedio from "./Gridmedio.astro";
---

<style>
  .tarjeta {
    height: 296px;
    width: 330.66px;
    background-color: #010114;
    border-radius: 6%;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tarjeta::before {
    content: "";
    position: absolute;
    height: 500px;
    width: 500px;
    background-image: conic-gradient(
      rgba(255, 145, 2, 0.767) 10deg,
      transparent 120deg
    );
    animation: rotar 15s linear infinite;
  }

  @keyframes rotar {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(-360deg);
    }
  }

  .tarjeta::after {
    content: "";
    position: absolute;
    width: 328.66px;
    height: 294px;
    background-image: linear-gradient(rgb(7, 11, 58),rgb(3, 0, 17));
    border-radius: 6%;
  }

  @media (max-width: 768px) {
  .tarjeta {
    width: 450px;
  }

  .tarjeta::before {
    height: 600px;
    width: 600px;
  }

  .tarjeta::after {
    width: 448px;
  }
}



  .iconon {
    position: relative;
  }
  .icono2 {
    transition: filter 0.3s;
    filter: brightness(150%) saturate(180%) hue-rotate(45deg);
    filter: drop-shadow(0 0 10px rgb(5, 70, 117));
  }
  /* Efecto Hover Neon */
  
</style>

<div class="container mx-auto lg:p-32 p-4">
  <!-- Primera fila: 3 columnas -->
