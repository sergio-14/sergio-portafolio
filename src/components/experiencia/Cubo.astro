<style>
  #cubopri {
    perspective: 1000px;
    perspective-origin: 50% 50%;
  }
  .sobremi {
    width: 140px;
    height: 140px;
    transform-style: preserve-3d;
    position: relative;
    animation: girarcubo 7s infinite linear;
    margin: auto;
  }
  .sobremi .imgc {
    height: 100%;
    width: 100%;
    position: absolute;
    border: 1px; /* Ancho del borde */
    border-style: solid; /* Estilo del borde */
    border-color: #000000;
    border-radius: 15px;
    filter: drop-shadow(0 0 10px rgb(255, 255, 255));
  }
  
  .sobremi .imgc:nth-child(1) {
    transform: rotateY(0deg) translateZ(75px);
  }
  .sobremi .imgc:nth-child(2) {
    transform: rotateY(90deg) translateZ(75px);
  }
  .sobremi .imgc:nth-child(3) {
    transform: rotateY(180deg) translateZ(75px);
  }
  .sobremi .imgc:nth-child(4) {
    transform: rotateY(-90deg) translateZ(75px);
  }
  .sobremi .imgc:nth-child(5) {
    transform: rotateX(90deg) translateZ(75px);
  }
  .sobremi .imgc:nth-child(6) {
    transform: rotateX(-90deg) translateZ(75px);
    border-radius: 5px;
  }
  @keyframes girarcubo {
    from {
      transform: rotateX(0deg) rotateY(0deg);
    }
    to {
      transform: rotateX(360deg) rotateY(360deg);
    }
  }
  
</style>
